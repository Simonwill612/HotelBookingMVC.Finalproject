@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<body>
    <h1 class="text-center">Management Account</h1>
    <p class="text-center">
        <a href="/Identity/Account/Register" class="btn btn-primary">Create New Account</a>
    </p>
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-12">
                <div class="bg-light text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <!-- Customizable header section if needed -->
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-dark">
                                    <th scope="col">ID</th>
                                    <th scope="col">Image</th>
                                    @* <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th> *@
                                    <th scope="col">Email</th>
                                    <th scope="col">Email Confirmed</th>
                                    <th scope="col">Password</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    @if (!user.Roles.Contains("Admin"))
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td><img src="~/img/user.jpg" alt="User Image" style="width: 40px; height: 40px;" class="rounded-circle" /></td>
                                            @* <td>@user.FirstName</td>
                                            <td>@user.LastName</td> *@
                                            <td>@user.Email</td>
                                            <td>@user.EmailConfirmed</td>
                                            <td>*********</td>
                                            <td>@string.Join(", ", user.Roles)</td>
                                            <td class="text-center" style="display: flex; gap: 5px;">
                                                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                                <a class="btn btn-success" asp-action="Details" asp-route-id="@user.Id">Details</a>
                                                <a class="btn btn-warning" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
