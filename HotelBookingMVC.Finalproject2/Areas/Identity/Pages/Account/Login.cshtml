 @page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="section">
        <div class="container">
            <div class="row full-height justify-content-center">
                <div class="col-12 text-center align-self-center py-5">
                    <div class="section pb-5 pt-5 pt-sm-2 text-center">
                       
                        <input class="checkbox"
                               type="checkbox"
                               id="reg-log"
                               name="reg-log" />
                        <label for="reg-log"></label>
                        <div class="card-3d-wrap mx-auto">
                            <div class="card-3d-wrapper">
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <div class="section text-center">
                                            <h4 class="pb-3">Log In</h4>
                                            <form id="account" method="post">
                                                <div class="form-group">
                                                    <input asp-for="Input.Email" type="text" class="form-style" required placeholder="Email or Phone">
                                                    <i class="input-icon uil uil-at"></i>
                                                </div>
                                                <div class="form-group mt-2">
                                                    <input asp-for="Input.Password" class="form-style pass-key" type="password" required placeholder="Password">
                                                    <i class="input-icon uil uil-lock-alt"></i>
                                                </div>
                                              

                                                <a class="btn mt-4">
                                                    <input type="submit" value="Login">
                                                </a>

                                                <p class="mb-0 mt-4 text-center">
                                                    <a id="forgot-password" asp-page="./ForgotPassword" class="link">Forgot your password?</a>
                                                </p>

                                                <p class="mb-0 mt-4 text-center">
                                                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color:white">Resend email confirmation</a>
                                                </p>
                                            </form>

                                            <p class="mt-3">
                                                 Don't have an account ? <a href="~/Identity/Account/register" class="link">Sign Up</a>
                                            </p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
