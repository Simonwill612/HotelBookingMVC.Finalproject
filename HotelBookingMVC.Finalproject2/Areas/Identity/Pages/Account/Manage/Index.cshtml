@page
@model HotelBookingMVC.Finalproject2.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-success" role="alert">
    @Model.StatusMessage
</div>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Input.FirstName" class="control-label"></label>
        <input asp-for="Input.FirstName" class="form-control" />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.LastName" class="control-label"></label>
        <input asp-for="Input.LastName" class="form-control" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Address" class="control-label"></label>
        <input asp-for="Input.Address" class="form-control" />
        <span asp-validation-for="Input.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Address2" class="control-label"></label>
        <input asp-for="Input.Address2" class="form-control" />
        <span asp-validation-for="Input.Address2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Country" class="control-label"></label>
        <input asp-for="Input.Country" class="form-control" />
        <span asp-validation-for="Input.Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.State" class="control-label"></label>
        <input asp-for="Input.State" class="form-control" />
        <span asp-validation-for="Input.State" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Zip" class="control-label"></label>
        <input asp-for="Input.Zip" class="form-control" />
        <span asp-validation-for="Input.Zip" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ProfilePicture" class="control-label"></label>
        <input asp-for="Input.ProfilePicture" type="file" class="form-control" />
        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
    </div>

    @if (Model.Input.ProfilePictureFileName != null)
    {
        <div class="form-group">
            <label>Current Profile Picture</label>
            <img src="~/uploads/@Model.Input.ProfilePictureFileName" alt="Profile Picture" style="width: 150px; height: auto;" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
</form>
