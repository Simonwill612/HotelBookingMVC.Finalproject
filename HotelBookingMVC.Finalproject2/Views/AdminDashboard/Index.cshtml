@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<body>
    <h1 class="text-center">Management Account</h1>
    <p class="text-center">
        <a href="/Identity/Account/Register" class="btn btn-primary">Create New Account</a>
    </p>

    <!-- Search Form (Optional) -->
    <div class="container-fluid pt-4 px-4">
        <form method="get" action="@Url.Action("Index")" class="mb-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <input type="text" name="searchQuery" class="form-control" placeholder="Search by email..." value="@Context.Request.Query["searchQuery"]" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>

        <!-- Customers Table -->
        <h2 class="text-center">Customer Accounts</h2>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Email</th>
                        <th scope="col">Email Confirmed</th>
                        <th scope="col">Role</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Customers)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td><img src="~/img/user.jpg" alt="User Image" style="width: 40px; height: 40px;" class="rounded-circle" /></td>
                            <td>@user.Email</td>
                            <td>@user.EmailConfirmed</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td class="text-center">
                                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <a class="btn btn-success" asp-action="Details" asp-route-id="@user.Id">Details</a>
                                <a class="btn btn-warning" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Managers Table -->
        <h2 class="text-center">Manager Accounts</h2>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Email</th>
                        <th scope="col">Email Confirmed</th>
                        <th scope="col">Role</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Managers)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td><img src="~/img/user.jpg" alt="User Image" style="width: 40px; height: 40px;" class="rounded-circle" /></td>
                            <td>@user.Email</td>
                            <td>@user.EmailConfirmed</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td class="text-center">
                                <a class="btn btn-danger" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <a class="btn btn-success" asp-action="Details" asp-route-id="@user.Id">Details</a>
                                <a class="btn btn-warning" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
