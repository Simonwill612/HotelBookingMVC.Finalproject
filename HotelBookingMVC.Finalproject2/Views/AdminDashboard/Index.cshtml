@{
    Layout = "~/Views/Shared/AdminLayout.cshtml"; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Account Management</title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Account Management</h1>

        <!-- Button to create a new account -->
        <div class="text-center mb-4">
            <a href="/Identity/Account/Register" class="btn btn-primary">Create New Account</a>
        </div>

        <!-- Display customer list -->
        <h2 class="text-center">Customer List</h2>
        <div class="table-responsive mb-5">
            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Email</th>
                        <th>Email Confirmed</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Customers)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>
                                <img src="~/img/user.jpg" alt="User Image" class="rounded-circle" style="width: 40px; height: 40px;" />
                            </td>
                            <td>@user.Email</td>
                            <td>@(user.EmailConfirmed ? "Confirmed" : "Not Confirmed")</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-success btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Display manager list -->
        <h2 class="text-center">Manager List</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Email</th>
                        <th>Email Confirmed</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Managers)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>
                                <img src="~/img/user.jpg" alt="Manager Image" class="rounded-circle" style="width: 40px; height: 40px;" />
                            </td>
                            <td>@user.Email</td>
                            <td>@(user.EmailConfirmed ? "Confirmed" : "Not Confirmed")</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-success btn-sm">Details</a>
                                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
