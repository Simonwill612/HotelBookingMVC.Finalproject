@model HotelBookingMVC.Finalproject2.Data.Entities.Feedback
@{
    ViewData["Title"] = "Feedback Details";
}
<h1>Feedback Details</h1>

<div>
    <h4>Feedback</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Hotel</dt>
        <dd class="col-sm-10">@Model.Hotel.Address</dd>

        <dt class="col-sm-2">Star Rating</dt>
        <dd class="col-sm-10">@Model.StarRating</dd>

        <dt class="col-sm-2">Comment</dt>
        <dd class="col-sm-10">@Model.Comment</dd>

        <dt class="col-sm-2">User Email</dt>
        <dd class="col-sm-10">@ViewBag.UserEmail</dd>

        <dt class="col-sm-2">Date Created</dt>
        <dd class="col-sm-10">@Model.DateCreated</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.FeedbackID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
