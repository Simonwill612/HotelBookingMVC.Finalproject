@model HotelBookingMVC.Finalproject2.ViewModels.ContactUsViewModel

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/ContactLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<section class="carousel_nav">
    <div class="container">
        <div class="carousel_content">
            <h2>Contact</h2>
            <p><a href="@Url.Action("Contact", "Home")">Home</a> » Contact</p>
        </div>
    </div>
</section>

<section class="ct_find pt-5">
    <div class="ct_title pt-lg-4 text-center">
        <h3 class="mb-2">Find Us</h3>
        <h2 class="mb-5">Get In Touch With</h2>
    </div>
    <div class="container pb-lg-4">
        <div class="d-grid ct_form">
            <div class="mt-lg-0 mt-md-4 mt-2">
                <form class="row g-3" asp-controller="Home" asp-action="Contact" method="post">
                    <div class="col-md-6">
                        <input asp-for="Name" placeholder="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <input asp-for="Subject" placeholder="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <textarea asp-for="Message" placeholder="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="col-12 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary btn_style">
                            Contact
                        </button>
                    </div>
                </form>
            </div>
            <div class="mt-lg-0 mt-4">
                <div class="ct_info">
                    <div class="ct_left text-center">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <div class="ct_right">
                        <h6>Address</h6>
                        <p>20 Cong Hoa, District 12, Ho Chi Minh city</p>
                    </div>
                    <div class="ct_left text-center">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="ct_right">
                        <h6>Telephone</h6>
                        <p><a href="tel:+(84)856996979">+(84)856996979</a></p>
                        <p><a href="tel:+(84)779077818">+(84)779077818</a></p>
                        <p><a href="tel:+(84)909813067">+(84)909813067</a></p>

                    </div>
                    <div class="ct_left text-center">
                        <i class="fa-regular fa-envelope"></i>
                    </div>
                    <div class="ct_right">
                        <h6>Email Us</h6>
                        <p><a href="mailto:example@mail.com">Mandvmgcs210120@fpt.edu.vn</a></p>
                        <p><a href="mailto:example@mail1.com">Thanhnlmgcs210087@fpt.edu.vn</a></p>
                        <p><a href="mailto:example@mail1.com">Tinlttgcs210085@fpt.edu.vn</a></p>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="ct_map mt-5">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.1076042203845!2d106.64782027995341!3d10.803070031256487!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175293807f40c35%3A0x9d9454fc0be382af!2zMjAgQ-G7mW5nIEjDsmEsIFBoxrDhu51uZyAxMiwgVMOibiBCw6xuaCwgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1725891402167!5m2!1svi!2s"
                style="border: 0"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="w-100"
                height="400">
        </iframe>
    </div>
</section>
