@model HotelBookingMVC.Finalproject2.ViewModels.ContactUsViewModel

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/ContactLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<section class="carousel_nav">
    <div class="container">
        <div class="carousel_content">
            <h2>Contact</h2>
            <p><a href="@Url.Action("Contact", "Home")">Home</a> » Contact</p>
        </div>
    </div>
</section>

<section class="ct_find pt-5">
    <div class="ct_title pt-lg-4 text-center">
        <h3 class="mb-2">Find Us</h3>
        <h2 class="mb-5">Get In Touch With</h2>
    </div>
    <div class="container pb-lg-4">
        <div class="d-grid ct_form">
            <div class="mt-lg-0 mt-md-4 mt-2">
                <form class="row g-3" asp-controller="Home" asp-action="Contact" method="post">
                    <div class="col-md-6">
                        <input asp-for="Name" placeholder="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Email" placeholder="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <input asp-for="Subject" placeholder="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <textarea asp-for="Message" placeholder="Message" class="form-control"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <div class="col-12 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary btn_style">
                            Contact
                        </button>
                    </div>
                </form>
            </div>
            <div class="mt-lg-0 mt-4">
                <div class="ct_info">
                    <div class="ct_left text-center">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <div class="ct_right">
                        <h6>Address</h6>
                        <p>#135 block, Barnard St. Brooklyn, London 10036, UK</p>
                    </div>
                    <div class="ct_left text-center">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div class="ct_right">
                        <h6>Telephone</h6>
                        <p><a href="tel:+(12)234-11-24">+(12)234-11-24</a></p>
                        <p><a href="tel:+(12)234-11-25">+(12)234-11-25</a></p>
                    </div>
                    <div class="ct_left text-center">
                        <i class="fa-regular fa-envelope"></i>
                    </div>
                    <div class="ct_right">
                        <h6>Email Us</h6>
                        <p><a href="mailto:example@mail.com">example@mail.com</a></p>
                        <p><a href="mailto:example@mail1.com">example@mail1.com</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="ct_map mt-5">
        <iframe src="https://www.google.com/maps/embed?pb=..." style="border: 0" allowfullscreen="" loading="lazy" class="w-100" height="400">
        </iframe>
    </div>
</section>
