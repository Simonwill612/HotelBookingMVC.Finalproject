@model IEnumerable<HotelBookingMVC.Finalproject2.ViewModels.HotelViewModel>

@{
    Layout = "~/Views/Shared/SearchLayout.cshtml";
}


<div class="container mt-4">
    <h2>Search Results</h2>

    @if (!Model.Any())
    {
        <p>No hotels found for the specified city.</p>
    }
    else
    {
        <div class="row">
            @foreach (var hotel in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="@hotel.Media.FirstOrDefault()?.FilePath" class="card-img-top" alt="@hotel.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@hotel.Name</h5>
                            <p class="card-text">
                                <strong>Address:</strong> @hotel.Address<br />
                                <strong>City:</strong> @hotel.City<br />
                                <strong>Phone:</strong> @hotel.PhoneNumber<br />
                                <strong>Email:</strong> @hotel.Email
                            </p>
                            <a href="@Url.Action("Details", "Home", new { id = hotel.HotelID })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
