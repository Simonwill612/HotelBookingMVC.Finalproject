@model HotelBookingMVC.Finalproject2.Data.Entities.Hotel

@{
    ViewData["Title"] = "Delete Hotel";
    Layout = "~/Views/Shared/DeleteHotelsLayout.cshtml";

}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <h2 class="text-center mb-4">Delete Hotel</h2>

        <div>
            <h4>Are you sure you want to delete this hotel?</h4>
            <div>

                <div >
                    <strong>Name: </strong><p class="form-control">@Model.Name</p>
                </div>        
                
                <div>
                    <strong>Description: </strong><p class="form-control">@Model.Description</p>
                </div>

                <div>
                    <strong>Address: </strong><p class="form-control"> @Model.Address, @Model.City, @Model.State @Model.ZipCode</p>
                </div>

                <div>
                    <strong>Phone Number: </strong><p class="form-control"> @Model.PhoneNumber</p>
                </div>
               
                <div>
                    <strong>Email: </strong><p class="form-control"> @Model.Email</p>
                </div>

            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="HotelID" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
