@model HotelBookingMVC.Finalproject2.Data.Entities.Room

@{
    ViewData["Title"] = "Delete Room";
    Layout = "~/Views/Shared/HotelsLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light rounded p-4">
        <h2 class="text-center mb-4">Delete Room</h2>

        <div>
            <h4>Are you sure you want to delete this room?</h4>
            <div>
                <div>
                    <strong>Room Number: </strong><p class="form-control">@Model.RoomNumber</p>
                </div>

                <div>
                    <strong>Type: </strong><p class="form-control">@Model.Type</p>
                </div>

                <div>
                    <strong>Price per Night: </strong><p class="form-control">@Model.PricePerNight</p>
                </div>

                <div>
                    <strong>Description: </strong><p class="form-control">@Model.Description</p>
                </div>

                <div>
                    <strong>Availability: </strong><p class="form-control">@Model.Availability</p>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="RoomID" />
                <input type="hidden" asp-for="HotelID" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" asp-route-hotelId="@Model.HotelID" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
