@model HotelBookingMVC.Finalproject2.ViewModels.MediaViewModel

@{
    ViewData["Title"] = "Delete Media";
    Layout = "~/Views/Shared/HotelsLayout.cshtml";
}

<h1>Delete Media</h1>

<h3>Are you sure you want to delete this media?</h3>

<div>
    <h4>Media</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Room
        </dt>
        <dd class="col-sm-10">
            @Model.RoomNumber
        </dd>
        <dt class="col-sm-2">
            File Name
        </dt>
        <dd class="col-sm-10">
            @Model.FileName
        </dd>
        <dt class="col-sm-2">
            Media Type
        </dt>
        <dd class="col-sm-10">
            @Model.MediaType
        </dd>
        <dt class="col-sm-2">
            File Path
        </dt>
        <dd class="col-sm-10">
            @Model.FilePath
        </dd>
    </dl>

    <form asp-action="DeleteMedia" method="post">
        <input type="hidden" asp-for="MediaID" value="@Model.MediaID" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Edit" asp-route-id="@Model.RoomID" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
